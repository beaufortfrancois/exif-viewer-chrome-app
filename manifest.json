{
  "manifest_version": 2,
  "name": "Exif Viewer",
  "description": "View Images Exif Data",
  "version": "0.2",
  "permissions": [ "fileSystem" ],
  "icons" : { "128": "icons/128.png" },
  "file_handlers": {
    "image": {
      "types": [ "image/jpeg" ],
      "title": "Exif Viewer"
    }
  },
  "app": {
    "background": {
      "scripts": [ "background.js" ]
    }
  }
}
